{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "semi": ["warn", "never"],
    "quotes": [
      "warn",
      "single",
      { "avoidEscape": true, "allowTemplateLiterals": true }
    ],
    "jsx-quotes": ["warn", "prefer-double"],
    "no-console": ["warn"],
    "indent": ["warn", 2, { "SwitchCase": 1, "ignoredNodes": ["JSXElement *"] }],
    "react/jsx-indent": ["warn", 2],
    "react/jsx-indent-props": ["warn", 2]
  }
}
